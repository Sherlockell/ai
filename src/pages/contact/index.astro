---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import ContactHero from '../../components/contact/ContactHero.astro';
import ContactForm from '../../components/contact/ContactForm';
import ContactOptions from '../../components/contact/ContactOptions.astro';
---

<Layout title="Contact Us - AIimplementation">
  <Header />
  <main class="bg-dark">
    <ContactHero />
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-24">
      <div class="grid lg:grid-cols-2 gap-16">
        <ContactForm client:load />
        <ContactOptions />
      </div>
    </div>
  </main>
</Layout>