---
import { getActiveClass } from '../../utils/navigation';

interface Props {
  href: string;
  isActive?: boolean;
}

const { href, isActive } = Astro.props;
---

<a
  href={href}
  class:list={[
    "relative px-3 py-1 text-sm font-medium transition-all duration-200",
    getActiveClass(isActive)
  ]}
>
  <span class="relative z-10">
    <slot />
  </span>
  
  {isActive && (
    <>
      <div class="absolute inset-0 rounded-md bg-white/10"></div>
      <div class="absolute inset-0 rounded-md bg-gradient-to-r from-blue-400/20 to-violet-400/20 blur-sm -z-10"></div>
      <div class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-blue-400 to-violet-400"></div>
    </>
  )}
</a>