---
import { services } from './services.config';
import ServiceCard from './ServiceCard.astro';
---

<section class="py-24 relative overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,#6d1d3d_0%,transparent_60%)] opacity-30"></div>
  
  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 [perspective:1000px]">
      {services.map((service, index) => (
        <div 
          class="transform-gpu transition-all duration-700 hover:[transform:rotateX(2deg)_rotateY(2deg)] hover:z-10"
          style={`animation: cardEntrance 0.6s ease-out ${index * 0.1}s both;`}
        >
          <ServiceCard service={service} />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes cardEntrance {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
</style>